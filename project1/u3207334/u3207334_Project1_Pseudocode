//A1.8
Function drawEyebows
//right Eyebows
START
accept varables: colour, mode, leftpos, toppos, width, height, corners
CALL fill Function to set colour
CALL ellipse mode Function to set mode
CALL draw ellipse Function
End

//left Eyebows
//lower pos
IF mouseIsPressed
START
accept ture varables: leftpos, toppos, width, height, corners
CALL draw ellipse Function

//normal height
Else
START
accept false varables: leftpos, toppos, width, height, corners
CALL draw ellipse Function
End

//A1.9 
Function drawNose
START
accept varables: colour, leftpos_x1, toppos_y1, leftpos_x2, toppos_y2, leftpos_x3, toppos_y3
CALL draw triangle Function
End

//A1.10
Function drawHair2
START
accept varables: colour, mode, size, leftpos, toppos, width, height, corners
CALL fill Function to set colour
CALL rectmode Function to set mode
CALL draw rect Function
End

//A1.11
Function drawMouth
START
accept varable: colour
CALL colour Function to fill shape

//shock 
IF mouseIsPressed
START
accept ture varables: leftpos, toppos, width, height
CALL draw ellipse Function
End

//smile
Else
START
accept false varables: leftpos, toppos, width, height, start, mode
CALL draw ellipse Function
End

//A1.12
Function create'?'
START

IF mouseIsPressed
accept ture varables: colour, leftpos, toppos, angle, axis, size
CALL textfill Function
CALL text Function
End

//smile
Else
START

End



