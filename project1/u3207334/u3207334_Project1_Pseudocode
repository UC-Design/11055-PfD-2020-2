set varable x= 250
set varable y= 200

START
Do
CREATE canvas
CALL drawAPortrait
Loop
End

//A0
Function CREATEcanvas
START
accept varables: width, height, colour
CALL CREATE text'CLICK'
End

//A0.1
Function CREATE text'CLICK'
START
accept varables: colour, font, size, leftpos, toppos
CALL text Function to create CLICK
End

//A1
Function drawAPortrait
START
CALL drawHair1
CALL drawClothes
CALL drawNeck
CALL drawFace
CALL drawEyes
CALL drawPupils
CALL drawGlasses
CALL drawEyebows
CALL drawNose
CALL drawHair2
CALL drawMouth
CALL create'?'
End

//A1.1
Function drawHair1
START
accept varables: colour, mode, size, leftpos, toppos, width, height, corners
CALL fill Function to set colour
CALL rectmode Function to set mode
CALL draw rect Function
End

//A1.2
Function drawClothes
START
accept varables: colour, leftpos, toppos, width, height, corners
CALL fill Function to set colour
CALL draw rect Function
End

//A1.3
